    <script>
        function filterTable() {
            var input = document.getElementById("searchInput").value.toLowerCase();
            var rows = document.getElementById("matchTable").getElementsByTagName("tr");

            for (var i = 1; i < rows.length; i++) {
                var playerCell = rows[i].getElementsByTagName("td")[5];
                if (playerCell) {
                    var playerText = playerCell.textContent || playerCell.innerText;
                    rows[i].style.display = playerText.toLowerCase().includes(input) ? "" : "none";
                }
            }
        }
    </script>
